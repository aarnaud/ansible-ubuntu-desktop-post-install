?SECTION ALL
?SECTION ESTABLISHED
?SECTION RELATED
?SECTION INVALID
?SECTION UNTRACKED
?SECTION NEW
{% if shorewall.externalPorts is defined %}
{% if shorewall.externalTCPAllowPorts is defined %}
{% for port in shorewall.externalTCPAllowPorts %}
ACCEPT		net		$FW		tcp {{ port }}
{% endfor %}
{% endif %}
{% if shorewall.externalUDPAllowPorts is defined %}
{% for port in shorewall.externalUDPAllowPorts %}
ACCEPT		net		$FW		tcp {{ port }}
{% endfor %}
{% endif %}
{% endif %}
